<%= stylesheet_link_tag "comments"%>
<% unless comment.archived? %>
  <div class="comments-card">
    <div class="comments-card-header">
      <h3>
        <%= comment.commenter %>:
      </h3>
      <p>
        <%= time_ago_in_words(comment.created_at) %> ago
      </p>
    </div>
  <p class="comments-card-body">
      <%= comment.body %>
  </p>

  <ul class="comments-card-options">
    <li><%= link_to "Destroy Comment", [comment.article, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
    </li>
    <li>
      upvote
    </li>
    <li>
      downvote
    </li>
    <li>
      reply
    </li>

  </ul>
  </div>
<% end %>
